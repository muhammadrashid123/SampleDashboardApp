<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:id="@+id/lahoreL"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorPrimary" >

            <ImageView
                android:onClick="onclick"
                android:id="@+id/city1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_lahore"/>
            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"/>


            <TextView
                android:onClick="onclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lahore"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/lahoreL"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/GardenID"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorPrimary" >

            <ImageView
                android:onClick="onclick"
                android:id="@+id/city2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_karchi"/>
            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:onClick="onclick"
                android:text="Lahore Garden"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>
        <Button
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:text="Back"
            android:id="@+id/LbackBTN"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_below="@+id/GardenID"
            android:layout_marginTop="5dp"
            android:onClick="onclick"
            />



    </LinearLayout>

</RelativeLayout>
